{
  "name": "igornast/stock-importer",
  "type": "project",
  "license": "proprietary",
  "authors": [
    {
      "name": "igor.nastarowicz"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "require": {
    "php": ">=8.3",
    "ext-ctype": "*",
    "symfony/framework-bundle": "*",
    "symfony/yaml": "*",
    "symfony/dotenv": "*",
    "symfony/flex": "*",
    "symfony/runtime": "*",
    "doctrine/doctrine-bundle": "*",
    "doctrine/orm": "^3.2",
    "doctrine/doctrine-migrations-bundle": "^3.3",
    "moneyphp/money": "^4.6"
  },
  "require-dev": {
    "ext-mbstring": "*",
    "friendsofphp/php-cs-fixer": "^3.34",
    "phpstan/phpstan": "^1.2",
    "symfony/stopwatch": "^7.1",
    "fakerphp/faker": "^1.23",
    "symfony/phpunit-bridge": "^7.1",
    "pestphp/pest": "^3.6",
    "mockery/mockery": "^1.6",
    "pestphp/pest-plugin-faker": "^3.0"
  },
  "replace": {
    "symfony/polyfill-ctype": "*",
    "symfony/polyfill-iconv": "*",
    "symfony/polyfill-php72": "*",
    "symfony/polyfill-php73": "*",
    "symfony/polyfill-php74": "*",
    "symfony/polyfill-php80": "*",
    "symfony/polyfill-php81": "*",
    "symfony/polyfill-php82": "*",
    "symfony/polyfill-php83": "*"
  },
  "conflict": {
    "phpunit/phpunit": "<7.5|9.1.2"
  },
  "scripts": {
    "auto-scripts": {
      "cache:clear": "symfony-cmd",
      "assets:install %PUBLIC_DIR%": "symfony-cmd"
    },
    "post-install-cmd": [
      "@auto-scripts"
    ],
    "post-update-cmd": [
      "@auto-scripts"
    ],
    "test:arch": "./vendor/bin/pest --testsuite Architecture",
    "test:phpunit:u": "./vendor/bin/pest --testsuite Unit --coverage --compact --min=90",
    "test:cs": "PHP_CS_FIXER_IGNORE_ENV=true ./vendor/bin/php-cs-fixer fix --dry-run --diff -v",
    "test:cs:fix": "PHP_CS_FIXER_IGNORE_ENV=true ./vendor/bin/php-cs-fixer fix --diff -v",
    "test:stan": "./vendor/bin/phpstan analyse -c phpstan.neon",
    "test": [
      "@test:cs",
      "@test:stan",
      "@test:arch",
      "@test:phpunit:u"
    ]
  },
  "config": {
    "allow-plugins": {
      "symfony/flex": true,
      "symfony/runtime": true,
      "pestphp/pest-plugin": true
    }
  }
}
